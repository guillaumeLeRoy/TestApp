<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/ui_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/default_error_content"
            android:textAppearance="@style/TextBase.Big.Medium.BlackColor" />

        <TextView
            android:id="@+id/ui_error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_white_bg_blue_stroke_corners"
            android:padding="8dp"
            android:text="@string/default_error_retry"
            android:textAppearance="@style/TextBase.Normal.Medium"
            android:textColor="@color/dark_blue" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>

