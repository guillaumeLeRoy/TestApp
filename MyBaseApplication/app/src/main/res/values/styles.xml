<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  Example of how to create a custom style for Texts   -->

    <style name="TextBase" parent="TextAppearance.AppCompat" />

    <style name="TextBase.Small" parent="TextBase">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextBase.Normal" parent="TextBase">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextBase.Big" parent="TextBase">
        <item name="android:textSize">@dimen/font_big</item>
    </style>


    <style name="TextBase.Normal.Medium.BlackColor" parent="TextBase.Normal.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBase.Normal.Medium.Primary" parent="TextBase.Normal.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBase.Normal.Medium.Secondary" parent="TextBase.Normal.Medium">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextBase.Normal.Medium.White" parent="TextBase.Normal.Medium">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="TextBase.Big.Medium.BlackColor" parent="TextBase.Big.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBase.Big.Medium.Primary" parent="TextBase.Big.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBase.Big.Medium.Secondary" parent="TextBase.Big.Medium">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextBase.Big.Medium.White" parent="TextBase.Big.Medium">
        <item name="android:textColor">@color/white</item>
    </style>




</resources>
