<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  Example of how to create a custom style for Texts   -->

    <style name="TextBase" parent="TextAppearance.AppCompat" />

    <style name="TextBase.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextBase.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextBase.Big">
        <item name="android:textSize">@dimen/font_big</item>
    </style>


    <style name="TextBase.Normal.Light">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBase.Normal.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBase.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBase.Big.Light">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBase.Big.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBase.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextBase.Normal.Medium.BlackColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBase.Normal.Medium.Primary">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBase.Normal.Medium.Secondary">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextBase.Normal.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextBase.Big.Medium.BlackColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBase.Big.Medium.Primary">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBase.Big.Medium.Secondary">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextBase.Big.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
