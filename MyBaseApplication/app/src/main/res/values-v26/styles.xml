<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextBase.Small.Light">
        <item name="android:fontWeight">@integer/font_weight_thin</item>
    </style>

    <style name="TextBase.Small.Medium">
        <item name="android:fontWeight">@integer/font_weight_medium</item>
    </style>

    <style name="TextBase.Small.Bold">
        <item name="android:fontWeight">@integer/font_weight_bold</item>
    </style>

    <style name="TextBase.Normal.Light">
        <item name="android:fontWeight">@integer/font_weight_thin</item>
    </style>

    <style name="TextBase.Normal.Medium">
        <item name="android:fontWeight">@integer/font_weight_medium</item>
    </style>

    <style name="TextBase.Normal.Bold">
        <item name="android:fontWeight">@integer/font_weight_bold</item>
    </style>

    <style name="TextBase.Big.Light">
        <item name="android:fontWeight">@integer/font_weight_thin</item>
    </style>

    <style name="TextBase.Big.Medium">
        <item name="android:fontWeight">@integer/font_weight_medium</item>
    </style>

    <style name="TextBase.Big.Bold">
        <item name="android:fontWeight">@integer/font_weight_bold</item>
    </style>


</resources>
